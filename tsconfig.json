{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noUnusedLocals": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["es2016", "esnext.asynciterable"],
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
